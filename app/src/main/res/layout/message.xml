<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- MESSAGE -->
    <LinearLayout
        android:id="@+id/LLMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/nexus_footer_container"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- HEADER MESSAGE -->
        <LinearLayout
            android:id="@+id/profilContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- HEADER MESSAGE IMG -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logo_nexus"/>

            <!-- HEADER MESSAGE TEXT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pseudoMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pseudoMessage"
                    android:textSize="15sp"
                    android:textColor="@color/color_white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Â·"
                    android:textSize="13sp"
                    android:textColor="@color/color_text"
                    />

                <TextView
                    android:id="@+id/dateMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateMessage"
                    android:textSize="13sp"
                    android:textColor="@color/color_text"/>

            </LinearLayout>

        </LinearLayout>

        <!-- CONTENT MESSAGE -->
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Salut j'adore manger Macdo avec mes amies et ma famille."
            android:textSize="15sp"
            android:textColor="@color/color_white"/>

        <!-- FOOTER MESSAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/likeMessage"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/icon_nexus_heart"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/likeMessage"
                android:background="@color/color_bg1"
                android:textColor="@color/color_text"
                />
        </LinearLayout>
            
            
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>